<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.taskmanager.ui.CategoryController" alignment="CENTER" spacing="10">
    <Label text="Manage Categories" />
    <TextField fx:id="categoryNameField" promptText="Category Name" />
    <Button text="Save" onAction="#onSaveCategory" />
    <Button text="Delete" fx:id="deleteButton" onAction="#onDeleteCategory" visible="false" />
</VBox>
