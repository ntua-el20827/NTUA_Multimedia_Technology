<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="179.0" prefWidth="299.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanager.ui.ReminderController">
    <Label prefHeight="34.0" prefWidth="126.0" text="Manage Reminders" />
    <ComboBox fx:id="typeCombo" promptText="Select Reminder Type" />
    <DatePicker fx:id="customDatePicker" promptText="Select Custom Date" visible="false" />
    <Button fx:id="saveButton" onAction="#onSaveReminder" text="Save" />
    <Button fx:id="deleteButton" onAction="#onDeleteReminder" text="Delete" visible="false" />
</VBox>
